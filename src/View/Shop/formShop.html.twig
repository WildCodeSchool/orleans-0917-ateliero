{% include 'header.html.twig' %}

<h1>Modifier les articles du shop</h1>

<hr>
<div class="panel panel-default">
    <div class="panel-body">
        <form method="post" action="index.php?route=addCreation" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Titre de l'article</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="">
            </div>

            <div class="form-group">
                <label for="price">Prix</label>
                <input type="text" class="form-control" id="price" name="price" placeholder="">
            </div>

            <div class="form-group">
                <label for="image">Images</label>
                <input type="file" id="image" name="url_picture" placeholder="">
            </div>

            <div class="form-group">
                <label for="url_etsy">Lien vers Etsy</label>
                <input type="text" class="form-control" id="url_etsy" name="url_etsy" placeholder="">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
