<div class="panel panel-info" id="Partner">
    <div class="panel-heading"><b>Vos Partenaires</b></div>
    <div class="panel-body">
        <div class="row">
            {% if partners|length == 0 %}
                <div class="col-xs-12">
                    <p class="alert-danger text-center">Vous n'avez pas encore de partenaire</p>
                </div>
            {% endif %}
            {% for partner in partners %}

                <div class="col-xs-6 col-sm-3 col-md-2 col-lg-2">
                    <div class="thumbnail thumbnailPartner">
                        <a href="{{ partner.url }}" target="_blank">
                            <img src="uploads/{{ partner.url_picture }}" alt="{{ partner.name }}" title="{{ partner.name }}" class="thumbnail img-responsive imgPartner"
                                 alt="">
                        </a>
                        <div class="caption partnerAbsolute">
                            <p>{{ partner.name }}</p>
                        </div>
                        <button type="submit" class="btn btn-xs btn-danger btn-block delPartnerButton" data-toggle="modal"
                                data-target="#confirmDelPartner" data-id="{{ partner.id }}"
                                data-partner="{{ partner.name }}"
                                data-picture="{{ partner.url_picture }}"><span
                                    class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-12">
                <form action="admin.php?route=adminAccueil" class="" method="POST" enctype="multipart/form-data">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="partnerName">Nom de votre partenaire:</label>
                            <input type="text" name="partnerName" class="form-control"
                                   placeholder="Nom de votre partenaire"
                                   value="{{ newPartner.name }}"/>
                        </div>
                        <div class="form-group">
                            <label for="partnerUrl">Adresse URL du site:</label>
                            <input type="text" name="partnerUrl" class="form-control" placeholder="Adresse URL du site"
                                   value="{{ newPartner.url }}"/>
                        </div>
                    </div>
                    <div class=" col-sm-6">
                        <div class="form-group">
                            <label for="partnerFile">Choisir une image:</label>
                            <input type="file" name="partnerFile" id="partnerFile"
                                   class="uploadInput"/>
                            <small>Format: jpg, jpeg, gif, png | Taille maximum: 2Mo | Dimensions recommand√©es: 200px * 200px</small>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-default pull-right">Ajouter</button>
                </form>
            </div>
        </div>
    </div>
</div>

{# MODAL POUR SUPPRESSION #}
<div class="modal fade" id="confirmDelPartner" tabindex="-1" role="dialog" aria-labelledby="ModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <p class="modal-title" id="ModalLabel">Suppression</p>
            </div>
            <div class="modal-body">
                <p>Confirmez-vous la suppression ?</p>
                <b><p id="partnerName" class="alert-warning text-center">Name</p></b>


                <div class="col-xs-12">
                    <img src=""
                         id="image"
                         class="thumbnail img-responsive center-block imgPartner"
                         alt="">
                </div>
                <form method="POST" action="admin.php?route=deletePartnerAction">
                    <div class="row">
                        <div class="col-xs-12">
                            <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Annuler
                            </button>
                            <input type="hidden" name="id"/>
                            <button id="delete" type="submit" class="btn btn-danger">Supprimer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>