{% extends 'Admin/Shop/adminShop.html.twig' %}

{% block shopAction %}

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Liste des créations</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    {% for creation in creations %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="col-xs-8 col-sm-5 col-sm-offset-1 col-md-6">
                                    <h4>{{ creation.title | title }}</h4></div>
                                <div class="col-xs-4 col-sm-2 col-md-2">
                                    <h4 class="pull-right">{{ creation.price }} €</h4></div>

                                <div class="col-xs-5 col-xs-offset-1 col-sm-1">
                                    <button class="btn btn-warning btn-sm" type="submit" name="">Update</button>
                                </div>

                                <div class="col-xs-5 col-sm-1">
                                    <form action="admin.php?route=adminShop&action=deleteAction" method="post">
                                        <input type="hidden" name="id" value="{{ creation.id }}"/>
                                        <button class="btn btn-danger btn-sm" type="submit" name="">Delete</button>
                                    </form>
                                </div>
                                <br/>
                            </div>
                        </div>
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>




{% endblock %}