{% extends 'Admin/Shop/adminShop.html.twig' %}

{% block shopAction %}

    {% if success %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Super !</strong>
            <ul>
                {% for successMessage in success %}
                    <li>{{ successMessage|raw }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="panel panel-info">
        <div class="panel-heading"><b>Liste des créations du shop</b></div>

        <div class="panel-body">
            <a href="admin.php?route=addShopCreation">
                <button class="btn btn-success pull-right" type="submit">Ajouter une création</button>
            </a>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-8 col-sm-5 col-sm-offset-1 col-md-6">
                        <h3>Nom de l'article</h3></div>
                    <div class="col-xs-4 col-sm-2 col-md-2">
                        <h3 class="pull-right">Prix</h3></div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {% for creation in creations %}
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-xs-8 col-sm-5 col-sm-offset-1 col-md-6">
                                    <h4>{{ creation.title | title }}</h4></div>
                                <div class="col-xs-4 col-sm-2 col-md-2">
                                    <h4 class="pull-right">{{ creation.price }} €</h4></div>

                                <div class="col-xs-5 col-xs-offset-1 col-sm-1">
                                    <a href="admin.php?route=updateShopAction&id={{ creation.id }}">
                                        <button class="btn btn-warning btn-sm" type="submit" name="">Modifier
                                        </button>
                                    </a>
                                </div>

                                <div class="col-xs-5 col-sm-1">
                                    <form action="admin.php?route=deleteShopAction" method="post">
                                        <input type="hidden" name="id" value="{{ creation.id }}"/>
                                        <button class="btn btn-danger btn-sm" type="submit" name="">Supprimer
                                        </button>
                                    </form>
                                </div>
                                <br/>
                            </div>
                        </div>
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}