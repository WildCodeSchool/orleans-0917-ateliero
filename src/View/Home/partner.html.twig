{% if partners|length > 0 %}
<section class="row partnerSection">

        <div class="col-xs-offset-1 col-xs-10">
            <h2>Mes Partenaires</h2>
            <hr class="linetitle"/>
        </div>
    <div class="col-xs-offset-1 col-xs-10">
        <div class="text-center">
        {% for partner in partners %}
                <a href="{{ partner.url}}" target="_blank"><img src="uploads/{{ partner.url_picture}}" alt="{{ partner.name}}" title="{{ partner.name}}" class="partnerImage img-responsive"/></a></li>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}